extends layout

block content
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
  script. 
    function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-65003490-1', 'auto');
      ga('send', 'pageview');
  div.row
    div.col-md-6
      h1 Eat Local
  div.container
    form.form-inline(action='/' method='post')
      div.form-group
        label Find Farmers Market
        input(type='text' name='search' placeholder="Enter Zip Code" autofocus)
        input.button(type='submit' value='Find Market' name='button')
    if errors
      each error in errors
        p.err= error
    div.row
      if marketInfo  
        div.col-md-9
          div.map_wrapper
            div#map_canvas.img-responsive
        div.col-md-3   
          h3.center Market Products
          div(id="change" class="slide")
      div#yo  
        if marketInfo
          each mark in marketInfo
            p.address 
              = mark.marketdetails.Address
            p.google
              = mark.marketdetails.GoogleLink
            p.products
              = mark.marketdetails.Products
            p.schedule 
              = mark.marketdetails.Schedule

  script(src='/javascripts/client.js' type='text/javascript')
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
